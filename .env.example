# Application Settings
APP_NAME=SlideGenie
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_USER=slidegenie
POSTGRES_PASSWORD=slidegenie_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=slidegenie

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=slidegenie
MINIO_USE_SSL=False

# AI Services (At least one required)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AI_MODEL_PRIMARY=claude-3-5-sonnet-20241022
AI_MODEL_FALLBACK=gpt-4o-mini
AI_MAX_RETRIES=3
AI_TIMEOUT_SECONDS=120

# AI Budget Limits (monthly in USD)
AI_BUDGET_ANTHROPIC=1000.0
AI_BUDGET_OPENAI=500.0

# AI Cache Settings
AI_CACHE_TTL_DAYS=7
AI_CACHE_ENABLED=True

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@slidegenie.com
SMTP_FROM_NAME=SlideGenie
SMTP_TLS=True

# Sentry (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_UPLOAD_EXTENSIONS=[".pdf",".txt",".md",".tex",".docx"]

# Generation Limits
FREE_TIER_PRESENTATIONS_PER_MONTH=5
FREE_TIER_STORAGE_MB=100
GENERATION_TIMEOUT_SECONDS=300
MAX_SLIDES_PER_PRESENTATION=100

# Feature Flags
ENABLE_LATEX_EXPORT=True
ENABLE_COLLABORATION=True
ENABLE_AI_SUGGESTIONS=True
ENABLE_ANALYTICS=True

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000